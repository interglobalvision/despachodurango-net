// VARIABLES

$header-height = 137px
$header-height-info = 162px

// ******************************************************

// BASIC

#main-content
  margin-top: $header-height

body.page-info
  #main-content
    margin-top: $header-height-info

// ******************************************************

// HEADER

#main-nav
  li
    margin: 0 $margin-tiny

#info-nav
  li
    margin: 0 $margin-micro

// ******************************************************

// WORK

#work-content
  column-count: 2
  column-gap: $gutter

// ******************************************************

// INFO

#team-holder
  > div:nth-child(1)
    padding: 40% 17% 0 0
  > div:nth-child(2)
    padding: 0 5% 0 12%
  > div:nth-child(3)
    padding: 10% 12% 0 5%
  > div:nth-child(4)
    padding: 5% 17% 0 0

// ******************************************************

// FOOTER

#site-logo
  height: 40px

// ******************************************************
