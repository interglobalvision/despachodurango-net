// FONTS
@import 'fonts/Din/Din'
@import 'fonts/AlverataInformal/AlverataInformal'

// declare font families here

$font-sans = font-stack('Helvetica');
$font-heading = font-stack('Din')
$font-serif = font-stack('AlverataInformal')

// ******************************************************

// ICONS FONTS

// ** https://genericons.com WP icon font set
// @import "fonts/icons/genericons"

// ** minimal version of Google Materialize UI icons. check the styl for usage
@import 'fonts/icons/materialize-min'

// ** full set of Google Materialize. https://design.google.com/icons/
// @import "fonts/icons/materialize"

// ******************************************************
// VARIABLES

$font-leading-basic = 1.70
$font-leading-tighter = 1.15
$font-leading-larger = 1.45

$font-tracking-basic = .001em
$font-tracking-wider = .05em

// ******************************************************

// TYPOGRAPHY

html
  font-family: $font-sans
  letter-spacing: $font-tracking-basic

body
  line-height: $font-leading-basic

p
  margin-bottom: 1rem

// FONT RULES

.font-sans
  font-family: $font-sans

.font-serif
  font-family: $font-serif

.font-heading
  font-family: $font-heading

.font-italic
  font-style: italic

.font-bold
  font-weight: bold

.font-lighter
  font-weight: lighter

.font-small-caps
  text-transform: uppercase
  font-size: .85em

.font-capitalize
  text-transform: capitalize

.font-uppercase
  text-transform: uppercase

// TEXT RULES

.text-overflow-ellipsis
  overflow: ellipsis

.text-align-left
  text-align: left

.text-align-right
  text-align: right

.text-align-center
  text-align: center

// LINKS

a,
a:active,
a:visited
  color: inherit
  text-decoration: none

p
  a
    text-decoration: underline

font-sizes($size-basic = 15px, $modulator = 1)

  html
    font-size: $size-basic

  $size-heading-small = $size-basic * (1.2 * $modulator)
  $size-heading = $size-basic * (1.5 * $modulator)
  $size-large = $size-basic * (1.6 * $modulator)
  $size-larger = $size-basic * (3.5 * $modulator)
  $size-massive = $size-basic * (10 * $modulator)

  .font-size-heading-small
    if $size-heading-small > ($size-basic + 1px)
      font-size: $size-heading-small
    else
      font-size: ($size-basic + 1px)

  .font-size-heading
    if $size-heading > ($size-basic + 1px)
      font-size: $size-heading
    else
      font-size: ($size-basic + 1px)

  .font-large
    font-size: $size-large

  .font-larger
    font-size: $size-larger

  .font-massive
    font-size: $size-massive

